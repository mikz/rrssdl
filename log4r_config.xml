<log4r_config>

    <pre_config>
        <custom_levels>FTRACE, DEBUG, INFO, NOTICE, WARN, ERROR, FATAL</custom_levels>
        <global level="ALL"/>
    </pre_config>

    <!-- Outputters -->
    <outputter name="screen" type="StdoutOutputter">
        <formatter type="Log4r::PatternFormatter">
            <pattern>%M</pattern>
        </formatter>
    </outputter>

    <outputter name="file" type="FileOutputter" trunc="true">
        <filename>/tmp/rrssdl.log</filename>
        <formatter type="Log4r::PatternFormatter">
            <pattern>[%6l %d] %c: %M [%t]</pattern>
        </formatter>
    </outputter>

    <!-- Loggers -->
    <logger name="screen" level="ALL" additive="false" trace="false">
        <outputter>screen</outputter>
    </logger>

    <!-- NOTE: if using trace_pattern, level ***MUST*** be ALL -->
    <logger name="screen::file" level="ALL" additive="true" trace="true">
        <outputter>file</outputter>
    </logger>

</log4r_config>
